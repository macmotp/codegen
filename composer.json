{
  "name": "macmotp/codegen",
  "description": "Generate human friendly codes with patterns",
  "keywords": [
    "macmotp",
    "codegen",
    "code",
    "code generator",
    "human friendly code",
    "reference code",
    "semantic code",
    "receipt numbers"
  ],
  "homepage": "https://github.com/macmotp/codegen",
  "license": "MIT",
  "authors": [
    {
      "name": "Marco Gava",
      "email": "marco.gava@me.com",
      "homepage": "https://github.com/macmotp",
      "role": "Software Engineer"
    }
  ],
  "require": {
    "php": "^7.4"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpunit/phpunit": "^9.3"
  },
  "autoload": {
    "psr-4": {
      "Macmotp\\": "src/Codegen"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Macmotp\\Codegen\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
